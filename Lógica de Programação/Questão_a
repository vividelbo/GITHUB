programa
{
	
	funcao inicio()
	{
		real n1
		real n2

		escreva("Digite o primeiro número: ")

		leia(n1)

		escreva("Digite o segundo número: ")

		leia(n2) 

		escreva("A soma é: ",n1+n2,"\n")

		escreva("A subtração é: ",n1-n2,"\n")

		escreva("A multiplicação é: ",n1*n2,"\n")

		escreva("A divisão é: ",n1/n2)
	}
}
